<Window x:Class="Clément_Ringeval_Exercice_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clément_Ringeval_Exercice_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1" VerticalAlignment="Top" Height="434">
            <TextBox Name ="titre" Height="24" Background="Aquamarine"  Text="Titre" GotKeyboardFocus="TextBoxGotKeyboardFocus" Margin="0,0,0,5" FontStyle="Italic"/>
            <TextBox Name ="maxlength" Height="24" Background="Aquamarine"  Text="MaxLength" GotKeyboardFocus="TextBoxGotKeyboardFocus" Margin="0,0,0,5" FontStyle="Italic"/>
            <Button Content="Créer le contrôle" Width="106" HorizontalAlignment="Stretch" Click="Button_Click" />
        </StackPanel>
        <WrapPanel 
            Name ="w1">
        </WrapPanel>
    </Grid>
</Window>
